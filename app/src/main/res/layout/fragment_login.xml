<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.app.saleapp.viewmodel.LoginViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/purple_700"
        android:orientation="horizontal"
        tools:context=".view.LoginActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/loginCardMarginTop"
            app:cardElevation="@dimen/loginCardElevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/paddingLow">

                <TextView
                    android:id="@+id/loginText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textSize="@dimen/textSizeHigh"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mediumHeight"
                    android:layout_marginTop="@dimen/marginHigh"
                    android:hint="@string/login_userid_hint"
                    android:inputType="number"
                    android:padding="@dimen/paddingLow"
                    android:text="@={viewModel.username}" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mediumHeight"
                    android:layout_marginTop="@dimen/marginHigh"
                    android:hint="@string/login_password_hint"
                    android:inputType="textPassword"
                    android:padding="@dimen/paddingLow"
                    android:text="@={viewModel.password}" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mediumHeight"
                    android:layout_marginTop="@dimen/marginMedium"
                    android:orientation="horizontal">

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/purple_700"
                    app:cardCornerRadius="@dimen/loginCardRadius"
                    app:cardElevation="@dimen/loginCardElevation">

                    <Button
                        android:id="@+id/loginButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mediumHeight"
                        android:onClick="@{() -> viewModel.onLoginClick()}"
                        android:text="@string/login"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSizeMedium"
                        app:backgroundTint="@color/purple_700"
                        app:cornerRadius="@dimen/loginCardRadius" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>